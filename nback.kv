<NBackTile>:
    animated_color: 0,0,0,0
    opacity: 0.05
    canvas.before:
        Color:
            rgba: self.animated_color
        RoundedRectangle: # center
            pos: self.pos
            size: self.size

<GridLine>:
    opacity: 0.5
    canvas:
        Color:
            rgba: app.theme_cls.primary_dark
        Rectangle:
            pos: self.pos
            size: self.size

<NBackGame>:
    FloatLayout:
        MDFillRoundFlatButton:
            md_bg_color: app.theme_cls.primary_color
            opacity: 0.5
            center: lowerl.center[0], lowerl.pos[1] /2
            size: centertile.size[0], centertile.size[1]/2
            size_hint: None, None
            text: "Position"
            on_release:
                app.printIDs()
    GridLine:
        center: (centertile.center[0] + centerl.center[0])/2, centertile.center[1]
        size: 1, centertile.size[1]*3.5

    GridLine:
        center: (centertile.center[0] + centerr.center[0])/2, centertile.center[1]
        size: 1, centertile.size[1]*3.5

    GridLine:
        center: centertile.center[0], (centertile.center[1] + upperm.center[1])/2
        size: centertile.size[1]*3.5, 1

    GridLine:
        center: centertile.center[0], (centertile.center[1] + lowerm.center[1])/2
        size: centertile.size[1]*3.5, 1


    NBackTile:
        id: centertile
        animated_color: app.theme_cls.primary_dark
        center: self.parent.center_x, self.parent.center_y + 20 #Subtract half the size to center the line
        size: self.parent.size[0]/4, self.parent.size[0]/4
    NBackTile:
        id: centerl
        animated_color: app.theme_cls.primary_dark
        center: centertile.center_x - centertile.size[0] - 20, centertile.center_y
        size: centertile.size
    NBackTile:
        id: centerr
        animated_color: app.theme_cls.primary_dark
        center: centertile.center_x + centertile.size[0] + 20, centertile.center_y
        size: centertile.size

    NBackTile:
        id: lowerr
        animated_color: app.theme_cls.primary_dark
        center: centertile.center_x + centertile.size[0] + 20, centertile.center_y - centertile.size[1] - 20
        size: centertile.size
    NBackTile:
        id: lowerm
        animated_color: app.theme_cls.primary_dark
        center: centertile.center_x, centertile.center_y - centertile.size[1] - 20
        size: centertile.size
    NBackTile:
        id: lowerl
        animated_color: app.theme_cls.primary_dark
        center: centertile.center_x - centertile.size[0] - 20, centertile.center_y - centertile.size[1] - 20
        size: centertile.size

    NBackTile:
        id: upperr
        animated_color: app.theme_cls.primary_dark
        center: centertile.center_x + centertile.size[0] + 20, centertile.center_y + centertile.size[1] + 20
        size: centertile.size
    NBackTile:
        id: upperm
        animated_color: app.theme_cls.primary_dark
        center: centertile.center_x, centertile.center_y + centertile.size[1] + 20
        size: centertile.size
    NBackTile:
        id: upperl
        animated_color: app.theme_cls.primary_dark
        center: centertile.center_x - centertile.size[0] - 20, centertile.center_y + centertile.size[1] + 20
        size: centertile.size









